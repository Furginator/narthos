{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "types": ["node", "vite/client"],
    "typeRoots": ["./node_modules/@types", "./src/styles"]
  },
  "extends": "./tsconfig.app.json",
  "include": ["src", "vite.config.ts"],
}
